---
import Layout from '../layouts/Layout.astro';
import FlechaDchHeader from "@/icons/FlechaDchHeader.astro";
import FlechaIzqHeader from "@/icons/FlechaIzqHeader.astro";
---

<Layout title="PlayBeat">
    <div class=" z-10 flex fle-row gap-2 mt-5 fixed px-8 " >
        <button onclick="window.history.back();">
            <FlechaIzqHeader/>
        </button>
        <button  onclick="window.history.forward();">
            <FlechaDchHeader/>
        </button>
    </div>
    <div class="mt-14">
        <h1 class="text-bluePB text-5xl font-semibold ml-10">EDITAR</h1>
    </div>
    <div class="grid grid-cols-2 gap-3 justify-between">
        <form class="flex flex-col mt-2 mx-10 w-96 text-white" onsubmit="">
            <label>Nombre:</label>
            <input type="text" class="border-2 border-white bg-transparent  h-10 rounded-md p-2  outline-none" placeholder="Introduce tu nombre "/>
            <label class="mt-3">Nombre usuario:</label>
            <input type="text" class="border-2 border-white bg-transparent  h-10 rounded-md p-2  outline-none" placeholder="Introduce tu nombre de usuario"/>
            <label class="mt-3">Correo electrónico</label>
            <input type="text" class=" border-2 border-white bg-transparent  h-10 rounded-md p-2 outline-none" placeholder="Introduce tu correo electrónico"/>
            <button type="submit" class="bg-[#6985C0] p-2 rounded-md mt-8 font-semibold">GUARDAR</button>
        </form>
        
        <div class=" flex flex-col flex-wrap content-center justify-center items-center photo gap-3 ">
            <span class="text-3xl font-bold text-white ">
                <div class="bg-gradient-to-b from-[#6985C0] from-30% to-[#CDD6EA]  shadow-2xl w-[180px] h-[180px] rounded-full text-white text-7xl solid flex items-center justify-center" >
                    MA
                </div>
                
            </span>
            <span class="text-white text-xl font-thin opacity-60">
                Edit photo
            </span>
            
        </div>
    </div>
</Layout>
