---
import Layout from '../layouts/Layout.astro';
import FlechaDchHeader from "@/icons/FlechaDchHeader.astro";
import FlechaIzqHeader from "@/icons/FlechaIzqHeader.astro";
---

<Layout title="PlayBeat">
    <div class=" z-10 flex fle-row gap-2 mt-5 fixed px-8 " >
        <button onclick="window.history.back();">
            <FlechaIzqHeader/>
        </button>
        <button  onclick="window.history.forward();">
            <FlechaDchHeader/>
        </button>
    </div>
    <div class="mt-14">
        <h1 class="text-bluePB text-5xl font-semibold ml-10">EDITAR</h1>
    </div>
    <div class="flex flex-col gap-3">
        <form class="flex flex-col mt-2 mx-10 w-96 text-white" onsubmit="">
            <label>Nombre:</label>
            <input type="text" class="border-2 border-white bg-transparent  h-10 rounded-md p-2  outline-none" placeholder="Introduce tu correo electrónico"/>
            <label class="mt-4">Correo electrónico</label>
            <input type="text" class=" border-2 border-white bg-transparent  h-10 rounded-md p-2 outline-none" placeholder="Introduce tu contraseña"/>
            <button type="submit" class="bg-[#6985C0] p-2 rounded-md mt-8 font-semibold">GUARDAR</button>
        </form>
</Layout>
