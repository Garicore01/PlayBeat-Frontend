---

import SongOpt from "./SongOpt.astro";
import {type Audio} from "@/interfaces";

import { Global } from "@/globalState/globalUrl.js";


interface Props {

    audios : Audio[];
    
}
 

const { audios} = Astro.props;

const nume = 5;

const itemsSongOpt = ["Añadir cola", "Añadir a playlist", "Añadir a favoritos"];


---

<section>
    <div class="flex flex-row items-center ">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-compact-left opacity-0 hover:opacity-100 transition-opacity cursor-pointer" width="40" height="60" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M13 20l-3 -8l3 -8" /></svg>
        <ul class=" flex flex-row w-full overflow-x-auto snap-x snap-mandatory scroll-smooth  carrusel">
            {audios.map( (item: Audio) => 
                    <li class="flex flex-col p-2 snap-start text-sm h-full hijo ">
                        <a href=`/audio/${item.idAudio}` class="  relative inline-block imagen ">
                            <img src={`${Global.url}foto/${item.imgAudio}`} class:list={[" w-56 rounded-md mb-1 hover:brightness-90 aspect-square " ]}/>
                            <div class="rounded-full w-10 h-10 hidden items-center justify-center botonesizq">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-player-play-filled" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M6 4v16a1 1 0 0 0 1.524 .852l13 -8a1 1 0 0 0 0 -1.704l-13 -8a1 1 0 0 0 -1.524 .852z" stroke-width="0" fill="currentColor" /></svg>
                            </div>
                            <div class="rounded-full w-10 h-10 hidden relative items-center justify-center botonesder ">
                                <SongOpt items={itemsSongOpt}><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-dots" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" /><path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" /><path d="M19 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" /></svg></SongOpt>                            
                            </div>
                        </a>

                        <a href=`/audio/${item.idAudio}` class=" w-max hover:underline">
                            <p class="text-base hover:underline">{item.titulo}</p>
                        </a>
                        <div class="flex flex-row">
                        {
                            item.Artistas && item.Artistas.map((artista, index) => 
                                <a href=`/user/${artista.idUsuario}` class="w-max hover:underline mr-1">
                                    <p class="text-gray-400">{( item.Artistas && index == item.Artistas?.length-1  )? artista.nombreUsuario : artista.nombreUsuario + ', '}</p>
                                </a>
                            )
                        }
                    </div>

                    </li>
            )}
        </ul>

            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-compact-right opacity-0 hover:opacity-100 transition-opacity cursor-pointer" width="40" height="60" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M11 4l3 8l-3 8" /></svg>
        
    </div>

	  
          
 
</section>


<style define:vars={{nume}}>
    .carrusel{
	scrollbar-width: none;
	--ancho-padre: 100%;
}
.hijo{
	min-width: calc(var(--ancho-padre) / var(--nume));
}
.botonesizq{
    position: absolute;
    top: 75%;
    left: 4%;

}
.imagen:hover .botonesizq{
    display: flex;
    background-color: rgba(0, 0, 0, 0.3);
}
.botonesder{
    position: absolute;
    top: 75%;
    left: 65%;

}
.imagen:hover .botonesder{
    display: flex;
    background-color: rgba(0, 0, 0, 0.3);
}



</style>

