---

import {Avatar} from "@nextui-org/react";
import { FollowButton } from "@components/FollowButton";


interface Props {
    nombre: string,
    email: string,
    img: string,
    followers: [],
}

const {nombre, email, img, followers} = Astro.props

---

 <header class=" h-80 w-full"> 
    <div class=" w-full h-full flex flex-row justify-between relative">
        
        <div class="  -z-40 w-full h-80 bg-[#9A9A9A]  blur-3xl"></div>
        <div class=" ml-5 flex flex-col  absolute name">
            <span class="text-3xl font-bold text-white">
                {nombre}
            </span>
            <span class="text-white opacity-60">
                {email}
            </span>

            
        </div>
        <div class=" flex flex-col flex-wrap content-center justify-center absolute photo gap-3 ">
            <span class="text-3xl font-bold text-white ">
              
                <Avatar className="w-[180px] h-[180px]" classNames={{
                    base: "bg-gradient-to-br from-[#6985C0] from-30% to-[#CDD6EA]",
                    icon: "text-black/80 w-[180px] h-[180px] rounded-full text-7xl solid flex items-center justify-center",
                    img: "w-[180px] h-[180px] rounded-full",
                    name: "text-7xl -mt-2 "

                  }} name={nombre} showFallback src={img}/>
                
            </span>
            <span class="text-white text-3xl font-thin opacity-60">
                {followers.length} seguidores
            </span>
        </div>
        <div class=" ml-1 flex flex-row gap-2  absolute edit">
            <FollowButton follow={false} client:load/>
        </div>
        
        

    </div>
</header>

<style>
    .name{
        bottom: 1vw;
        left: 0.5vw;
    }
    .photo{
        bottom: 2.5vw;
        left: 42.2%;
        
    }
    .edit{
        bottom: 1vw;
        right: 0.5vw;
    }


    
</style>